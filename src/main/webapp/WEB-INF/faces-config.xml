    <navigation-rule>
        <from-view-id>/views/start.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{navigationController.moveToIndex}</from-action>
            <to-view-id>/views/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/views/index.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{navigationController.moveToStart}</from-action>
            <to-view-id>/views/start.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <managed-bean>
        <managed-bean-name>navigationController</managed-bean-name>
        <managed-bean-class>drukhary.web.laba3.managedBeans.NavigationController</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>managedPointBean</managed-bean-name>
        <managed-bean-class>drukhary.web.laba3.managedBeans.ManagedPointBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
        <managed-property>
            <property-name>resultMessage</property-name>
            <value/>
        </managed-property>
    </managed-bean>
